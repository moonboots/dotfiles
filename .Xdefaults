! https://bbs.archlinux.org/viewtopic.php?id=106412
! URxvt*buffered: false

URxvt*background: #262626
! URxvt*background: #000000
URxvt*foreground: #DEDEDE

! urxvt*depth: 32
! urxvt*background:           rgba:0000/0000/0000/0000

! urxvt*depth: 32
! ! urxvt*background:           rgba:0000/0000/0000/0000
! urxvt*background: rgba:0000/0000/0200/c800

! URxvt.font: -*-dina-medium-r-*-*-*-80-*-*-*-*-*-*
! URxvt.font: -*-proggy clean-*-*-*-*-*-*-*-*-*-*-*
!URxvt.boldFont: -*-dina-bold-r-*-*-*-80-*-*-*-*-*-*

!URxvt.font: xft:Droid Sans Mono:size=9
! URxvt.font: 9x15
! URxvt.font: ProggySmall
! URxvt.font: Dina:style=Regular
! URxvt.font: DinaMedium8
URxvt.font: xft:Ubuntu Mono:medium:size=9,xft:WenQuanYi Micro Hei Mono:antialias=true
! URxvt.font: xft:FiraMono:size=8,xft:WenQuanYi Micro Hei Mono:antialias=true
!disable bold until I figure out why it is rendered taller than medium
!URxvt.boldFont: xft:Ubuntu Mono:medium:size=12
! URxvt.boldFont: xft:Ubuntu Mono:style=bold:size=12

URxvt*saveLines: 0
! URxvt*scrollBar: false
! URxvt*scrollstyle: rxvt

! save some power
URxvt.cursorBlink: false
!*Rxvt.cursorUnderline: true
!URxvt.cursorColor: #006600
!URxvt.cursorColor: #FF5533

! f1 - f4 don't work in tmux
! remap these to xterm equivalents
!URxvt.keysym.F1:		\033OP
!/URxvt.keysym.F2:		\033OQ
!URxvt.keysym.F3:		\033OR
!/URxvt.keysym.F4:		\033OS

!URxvt.keysym.Control-Up:   \033[1;5A
!/URxvt.keysym.Control-Down:    \033[1;5B
!URxvt.keysym.Control-Left:    \033[1;5D
!/URxvt.keysym.Control-Right:    \033[1;5C

! scrollback hijacks alt-s shortcut
! URxvt.perl-ext: -searchable-scrollback

! http://r.untroubled.be/docs/urxvt/urxvt_keys_vim.html
! URxvt.keysym.M-Up:      \033[1;3A
! URxvt.keysym.M-Down:    \033[1;3B
! URxvt.keysym.M-Right:   \033[1;3C
! URxvt.keysym.M-Left:    \033[1;3D
! URxvt.keysym.M-Prior:   \033[5;3~
! URxvt.keysym.M-Next:    \033[6;3~
! URxvt.keysym.M-End:     \033[1;3F
! URxvt.keysym.M-Home:    \033[1;3H

! URxvt.keysym.C-Up:      \033[1;5A
! URxvt.keysym.C-Down:    \033[1;5B
! URxvt.keysym.C-Right:   \033[1;5C
! URxvt.keysym.C-Left:    \033[1;5D
! URxvt.keysym.C-Prior:   \033[5;5~
! URxvt.keysym.C-Next:    \033[6;5~
! URxvt.keysym.C-End:     \033[1;5F
! URxvt.keysym.C-Home:    \033[1;5H

URxvt.borderless: true
! URxvt*internalBorder: 0
! URxvt*externalBorder: 0
URxvt.internalBorder: 0
URxvt.externalBorder: 0
! URxvt*backgroundPixmap: /home/jack/urxvt-bg
Xcursor.theme: Human
